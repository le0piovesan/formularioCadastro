@model IEnumerable<FormularioCadastro.Models.DbFormulario>

@{
    ViewData["Title"] = "Index";
}

<h1>Formulário de Cadastro</h1>

<p>
    <a class="btn btn-info" asp-action="Create">Adicionar</a>
</p>
@{
    if (Model.Count() > 0)
    {
        <table class="table table-dark table-striped overflow-hidden rounded">
            <thead>
                <tr>
                    <th>&#128203;</th>
                    <th>
                        Nome
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Data de Nascimento
                    </th>
                    <th>
                        Rua
                    </th>
                    <th>
                        Número
                    </th>
                    <th>
                        Cidade
                    </th>
                    <th>
                        UF
                    </th>
                    <th>
                        Mensagem
                    </th>
                    <th>
                        Ações
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.id_usuario"><i class="fa-solid fa-circle-info"></i></a>
                        </td>
                        <td>

                            @Html.DisplayFor(modelItem => item.nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.email)
                        </td>
                        <td>
                            @{
                                var date = item.data_nascimento.ToShortDateString();
                            }
                            @Html.DisplayFor(modelItem => date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.rua)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.num)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.cidade)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.uf)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.mensagem)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.id_usuario"><i class="fa-solid fa-file-pen"></i></a> |
                            <a asp-action="Delete" asp-route-id="@item.id_usuario"><i class="fa-solid fa-trash-can"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div>
            <h4>&#9757; &#9757; &#9757; Lista vazia, comece adicionando pelo botão acima</h4>
        </div>
    }
}
